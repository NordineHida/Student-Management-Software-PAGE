<Window x:Class="PAGE.Vue.Ecran.InformationsSupplementaires"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAGE.Vue.Ecran"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="InformationsSupplementaires" Height="1000" Width="1500">

    <Window.Background>
        <SolidColorBrush Color="#bfd7eb" />
    </Window.Background>

    <Window.Resources>


    </Window.Resources>

    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Première ligne pour le logo -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.30*"/>
            <RowDefinition Height="*"/>
            <!-- Troisième ligne pour la liste des étudiants -->
        </Grid.RowDefinitions>
        
        <Image Source="/Vue/Ressources/Img/logoIUT.png" Stretch="UniformToFill" Grid.Row="0" Margin="10" Width="150" Height="150" />

        <Rectangle Stretch="UniformToFill" Fill="White" Stroke="Black" Grid.Row ="1" Grid.RowSpan="4"/>

        <Image Source="/Vue/Ressources/Img/photo.png" Grid.Row ="1" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="300" Width="260" Margin="0,40,0,0"/>

        <!-- Informations Importantes -->

        <!-- Nom et Prenom-->
        
        <TextBlock x:Name="txtName" HorizontalAlignment="Left" FontSize="20" />
        <TextBlock x:Name="txtPrenom" HorizontalAlignment="Left" FontSize="20" />

            <!-- Numéro Apogee -->
        <TextBlock Text="NumApogee : " HorizontalAlignment="Left" FontSize="20" Grid.Row="1" Margin="300,0,0,0" Height="30"/>
        <TextBlock x:Name="txtNumApogee" HorizontalAlignment="Left" FontSize="20" Grid.Row="1" Margin="433,108,0,109" Height="30" Width="150"/>



        <!-- Groupe -->
        <TextBlock Text="Groupe : " HorizontalAlignment="Left" FontSize="20" Grid.Row="1" Margin="300,70,0,0" Height="30"/>
            <TextBlock x:Name="txtGroupe" HorizontalAlignment="Left" FontSize="20" />

            <!-- Adresse mail -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Adresse mail : " HorizontalAlignment="Left" FontSize="20" />
                <TextBlock x:Name="txtMail" HorizontalAlignment="Left" FontSize="20" />
            </WrapPanel>

            <!-- Sexe -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Sexe : " HorizontalAlignment="Left" FontSize="20" />
                <TextBlock x:Name="txtSexe" HorizontalAlignment="Left" FontSize="20" />
            </WrapPanel>

            <!-- Type de bac obtenu -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Bac obtenu : " HorizontalAlignment="Left" FontSize="20" />
                <TextBlock x:Name="txtTypebac" HorizontalAlignment="Left" FontSize="20" />
            </WrapPanel>

            <!-- Statut (Boursier ou non) -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Boursier : " HorizontalAlignment="Left" FontSize="20" />
                <TextBlock x:Name="txtBoursier" HorizontalAlignment="Left" FontSize="20" />
            </WrapPanel>

            
            
            <!-- Régime de formation -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10"> 
            <TextBlock Text="Régime : " HorizontalAlignment="Left" FontSize="20" />
            <TextBlock x:Name="txtRegime" HorizontalAlignment="Left" FontSize="20" />
            </WrapPanel>
        

        
        <!-- Nom et Prenom de l'étudiant --><!--
        <TextBlock x:Name="txtName" HorizontalAlignment="Left" FontSize="20" Height="42" Margin="273,37,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="181"/>
        <TextBlock x:Name="txtPrenom" HorizontalAlignment="Left" FontSize="20" Height="42" Margin="494,37,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="220"/>

        --><!-- Numéro Apogee --><!--
        <TextBlock HorizontalAlignment="Left" FontSize="20" Height="42" Margin="273,93,0,0" Grid.Row="1" TextWrapping="Wrap" Text="NumApogee : " VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="txtNumApogee" HorizontalAlignment="Left" FontSize="20" Height="42" Margin="412,93,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="202"/>

        --><!-- Groupe --><!--
        <TextBlock HorizontalAlignment="Left" FontSize="20" Height="42" Margin="273,147,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Groupe :  " VerticalAlignment="Top" Width="82"/>
        <TextBlock x:Name="txtGroupe" HorizontalAlignment="Left" FontSize="20" Height="42" Margin="372,147,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="500"/>

        --><!-- Adresse mail --><!--
        <TextBlock HorizontalAlignment="Left" FontSize="20" Height="42" Margin="273,199,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Adresse mail :  " VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="txtMail" HorizontalAlignment="Left" FontSize="20" Height="42" Margin="406,199,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="562"/>

        --><!-- Sexe --><!--
        <TextBlock HorizontalAlignment="Left" FontSize="20" Height="42" Margin="41,300,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Sexe :  " VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="txtSexe" HorizontalAlignment="Left" FontSize="20" Height="42" Margin="164,301,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="123"/>

        --><!-- Type de bac obtenu --><!--
        <TextBlock HorizontalAlignment="Left" FontSize="20" Height="42" Margin="41,343,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Bac obtenu : " VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="txtTypebac" HorizontalAlignment="Left" FontSize="20" Height="42" Margin="174,342,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="123"/>

        --><!-- Statut (Boursier ou non) --><!--
        <TextBlock HorizontalAlignment="Left" FontSize="20" Height="42" Margin="41,385,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Boursier : " VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="txtBoursier" HorizontalAlignment="Left" FontSize="20" Height="42" Margin="169,384,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="123"/>

        --><!-- Régime de formation --><!--
        <TextBlock HorizontalAlignment="Left" FontSize="20" Height="42" Margin="41,426,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Régime : " VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="txtRegime" HorizontalAlignment="Left" FontSize="20" Height="42" Margin="174,427,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="190"/>-->


        <!-- Informations Complémentaires -->              

        <!-- Bouton pour afficher les informations complémentaires-->
        <Button Content="Afficher les informations complémentaires" Click="InfosComp_Click" HorizontalAlignment="Left" Height="36" Margin="41,514,0,0" Grid.Row="1" VerticalAlignment="Top" Width="228"/>

        <StackPanel x:Name="contInfosComp" Visibility="Collapsed" Orientation="Vertical" Margin="316,308,-235,313" Grid.Row="1">
            <!-- Date de naissance -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="txtDateNaissance1" FontSize="20" Text="Date de naissance : " />
                <TextBlock x:Name="txtDateNaissance2" FontSize="20" />
            </WrapPanel>

            <!-- Adresse de résidence -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="txtAdresse1" FontSize="20" Text="Adresse de résidence : " />
                <TextBlock x:Name="txtAdresse2" FontSize="20" />
            </WrapPanel>

            <!-- Téléphone fixe -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="txtTelFixe1" FontSize="20" Text="Téléphone fixe : " />
                <TextBlock x:Name="txtTelFixe2" FontSize="20" />
            </WrapPanel>

            <!-- Téléphone portable -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="txtTelPortable1" FontSize="20" Text="Téléphone portable : " />
                <TextBlock x:Name="txtTelPortable2" FontSize="20" />
            </WrapPanel>

            <!-- Login réseau -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="txtLogin1" FontSize="20" Text="Login réseau : " />
                <TextBlock x:Name="txtLogin2" FontSize="20" />
            </WrapPanel>
        </StackPanel>


    </Grid>
</Window>
