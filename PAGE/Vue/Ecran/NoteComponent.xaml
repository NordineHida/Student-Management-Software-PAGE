<UserControl x:Class="PAGE.Vue.Ecran.NoteComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PAGE.Vue.Ecran"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="430">
    <UserControl.Resources>
        <FontFamily x:Key="OpenSauceOne">/Vue/Ressources/Fonts/#Open Sauce One</FontFamily>
    </UserControl.Resources>
    
    <Grid Margin="10 " >
        <Image ToolTip="" x:Name="PictoNote" Margin="5" Stretch="Fill" Width="100" HorizontalAlignment="Left" />
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="150,0,0,0" x:Name="LabelTitre"  FontFamily="{StaticResource OpenSauceOne}" FontSize="20" Grid.RowSpan="2" IsEnabled="False" IsHitTestVisible="False" Width="400" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
