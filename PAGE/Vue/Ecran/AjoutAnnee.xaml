<Window x:Class="PAGE.Vue.Ecran.AjoutAnnee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAGE.Vue.Ecran"
        mc:Ignorable="d"
        Title="Ajouter une année" Height="120" Width="260"
        ResizeMode="NoResize">

    <!--Fond (Yamato)-->
    <Window.Background>
        <SolidColorBrush Color="#bfd7eb" />
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <!-- Zone de saisie de l'année (Yamato) -->
        <Label Grid.Row="1" Content="Veuillez saisir une année :" FontSize="15" FontFamily="Open Sauce One" />
        <TextBox Grid.Row="2" x:Name="txtAnneeSaisie" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="60"/>

        <!-- Bouton Ok-->
        <Button Click="OkClick" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Ok" FontSize="12" Margin="0,0,20,0" Foreground="#FF2B2B5A" Background="#FF3DA79D" FontFamily="Open Sauce One" Height="20" Width="65"/>

    </Grid>
</Window>
