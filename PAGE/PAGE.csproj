<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Vue\Ecrans\**" />
    <EmbeddedResource Remove="Vue\Ecrans\**" />
    <None Remove="Vue\Ecrans\**" />
    <Page Remove="Vue\Ecrans\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Vue\Ressources\logo.png" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Model\" />
    <Folder Include="VueModel\" />
    <Folder Include="Vue\Ecran\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" Version="2.20.0" />
