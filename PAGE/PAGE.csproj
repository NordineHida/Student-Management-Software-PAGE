  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\APIEtudiant\APIEtudiant.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Vue\Ressources\logo.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Vue\Ressources\Res\Strings.en.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.en.resx</DependentUpon>
    </Compile>
    <Compile Update="Vue\Ressources\Res\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Vue\Ressources\Res\Strings.en.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.en.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Vue\Ressources\Res\Strings.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
